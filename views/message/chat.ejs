  console.log("Connected to /ChatLock namespace:", socket.id);
});


    $(document).ready(function () {
      $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
      });
    });

    // Show chat box
    function showChatBox(userId, username, profilePic) {
      $('#chatBoxContainer').show();
      $('#chatUsername').text(username);
      $('#chatUserProfilePic').attr('src', profilePic);
    }

    // Simulate sending a message
    function sendMessage() {
      var message = $('#messageInput').val();
      if (message) {
        $('#chatBox').append('<div><strong>You:</strong> ' + message + '</div>');
        $('#messageInput').val('');
      }
    }
  </script>
</body>

</html>
